<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Tournament:</h3>

    <form class="form new-tournament2-form">
      <div class="form-group">
        <label for="tournament2-name">tournament2 name:</label>
        <input class="form-input" type="text" id="tournament2-name" name="tournament2-name" />
      </div>
      <div class="form-group">
        <label for="tournament2-players">minimum players:</label>
        <input class="form-input" type="number" id="tournament2-players" name="tournament2-players" />
      </div>
      <div class="form-group">
        <label for="tournament2-desc">description:</label>
        <textarea class="form-input" id="tournament2-desc" name="tournament2-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if tournament2s.length}}
  <div class="col-md-6 tournament2-list">
    <h3>Current Tournaments:</h3>

    {{#each tournament2s as |tournament2|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/tournament2/{{tournament2.id}}">{{tournament2.tournament2_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{tournament2.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/newTournament2.js"></script>
